extends layouts/layout

block bodyContent
    .container
        .title-container
            h1.title-left user
            h1.title-right .MANAGER
        .search-container
            form(method='POST' action='/users/search/' + value)
                input.search(placeholder='search...')
                button.search-button(type="submit"): i(class="fas fa-search")
        .button-container
            form(method='GET' action='/users/ascending/')
                button.button-order: i(class="fas fa-sort-alpha-up")
            form(method='GET' action='/users/descending/')
                button.button-order: i(class="fas fa-sort-alpha-down")
        include includes/table
        a.nav-button(href='/') add user